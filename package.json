{
  "name": "context-filter-polyfill",
  "version": "0.1.7",
  "description": "Polyfills `CanvasRenderingContext2d.filter` capability of adopting CSS3 filters to canvas contexts at least partially.",
  "main": "dist/index.js",
  "files": [
    "dist/index.js",
    "index.html",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:davidenke/context-filter-polyfill.git"
  },
  "author": {
    "name": "Zalari GmbH",
    "email": "info@zalari.de",
    "url": "www.zalari.de"
  },
  "license": "MIT",
  "scripts": {
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --ci --runInBand --reporters=default --reporters=jest-junit",
    "build": "rollup --config --environment NODE_ENV:production",
    "start:build": "rollup --config --environment NODE_ENV:development --watch",
    "start:server": "http-server .",
    "start": "run-p start:*"
  },
  "devDependencies": {
    "@types/chrome": "0.0.81",
    "@types/jest": "24.0.11",
    "@types/puppeteer": "1.12.3",
    "http-server": "0.11.1",
    "jest": "24.7.1",
    "jest-canvas-mock": "2.0.0-beta.1",
    "jest-cli": "24.7.1",
    "jest-junit": "6.3.0",
    "npm-run-all": "4.1.5",
    "puppeteer": "1.14.0",
    "rollup": "1.9.0",
    "rollup-plugin-typescript2": "0.20.1",
    "ts-jest": "24.0.2",
    "tslint": "5.15.0",
    "typescript": "3.4.2"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "unit tests",
    "outputDirectory": "./reports",
    "outputName": "./junit.xml"
  }
}
